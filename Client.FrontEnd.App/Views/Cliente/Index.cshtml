
@{
    ViewData["Title"] = "Cliente Page";
}




<div class="text-center">
    <h1 class="display-4">Bem Vindo ao CRM Cliente </h1>
    <p>Execute as ações abaixo:</p>
</div>

<div class="container">
    <h3>Consulta Cliente</h3>
    <div id="search-engine">
        <form id="search-form">
            <div class="form-row">
                <div class="col">
                    <label for="cpf" class="label-inline">CPF:</label>
                    <input type="text" class="form-control rounded-input" id="cpf" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" placeholder="378.846.758-55">
                </div>
                <div class="col">
                    <label for="nome" class="label-inline">Nome:</label>
                    <input type="text" class="form-control rounded-input" id="nome">
                </div>
                <div class="col">
                    <label for="data-nascimento" class="label-inline">Data de Nascimento:</label>
                    <input type="date" class="form-control rounded-input" id="data-nascimento">
                </div>
                <div class="col">
                    <label class="label-inline">Sexo:</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="sexo-masculino" name="sexo" value="masculino">
                        <label class="form-check-label" for="sexo-masculino">Masculino</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="sexo-feminino" name="sexo" value="feminino">
                        <label class="form-check-label" for="sexo-feminino">Feminino</label>
                    </div>
                </div>
            </div>

            <div class="form-row mt-3">
                <div class="col">
                    <label for="estado" class="label-inline">Estado:</label>
                    <select class="form-control rounded-input" id="estado">
                        <option value="">Todos</option>
                    </select>
                </div>
                <div class="col">
                    <label for="cidade" class="label-inline">Cidade:</label>
                    <select class="form-control rounded-input" id="cidade">
                        <option value="">Todos</option>
                    </select>
                </div>
                <div class="col">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                        <button type="button" class="btn btn-secondary" id="limpar">Limpar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container mt-5">
<div class="text-center">
    <table id="tabelaClientes" class="table">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Estado</th>
                <th>Cidade</th>
                <th>Sexo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <!-- As linhas da tabela serão preenchidas via JavaScript -->
        </tbody>
    </table>
</div>


<div class="modal fade" id="confirmacaoModal" tabindex="-1" role="dialog" aria-labelledby="confirmacaoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmacaoModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja realmente excluir o cliente?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="btnConfirmarExclusao">Excluir</button>
            </div>
        </div>
    </div>
</div>

</div>

@section Scripts{
<script src="~/js/delete-cliente.js" asp-append-version="true"></script>}
